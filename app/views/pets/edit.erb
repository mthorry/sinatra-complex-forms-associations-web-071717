<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <p>Pet Name:</p>
  <input id="pet[name]" type="text" name="pet[name]" value="<%= @pet.name %>">

  <p>Pets Owner</p>
  <%Owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_ids][]" id="<%= owner.id %>" value="<%=owner.id%>"<%='checked' if @pet.owners.include?(owner) %>><%=owner.name%></input><br>
  <%end%>
  <br></br>

  <h2>Create a new pet:</h2>

  <label>Pet Name:</label>
    <input type="text" name="pet[name]"></input>

  <br></br>

  <input type="submit" value="Update Owner">
</form>

